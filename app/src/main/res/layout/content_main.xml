<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:background="@color/activity_background"
    android:layout_marginTop="?android:attr/actionBarSize"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_accelerometer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:onClick="launchActivity"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorAccelerometerMain"
            android:paddingTop="15dp"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textAlignment="center"
            android:text="RÃ¶hrenglocken"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="60dp"
            android:background="#ECEFF1"
            android:padding="15dp"
            android:src="@drawable/icon_roehrengl"
            android:id="@+id/imageViewAccelerometer" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_Altimeter"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:onClick="launchActivity"
        android:layout_weight="1"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorAltimeterMain"
            android:paddingTop="15dp"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:textAlignment="center"
            android:text="Altimeter"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="60dp"
            android:padding="5dp"
            android:background="@color/colorAltimeter50"
            android:src="@drawable/mountain_snow_rugged_512"
            android:id="@+id/imageViewAltimeter" />
    </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="2">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_Decibel"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:onClick="launchActivity"
        android:layout_weight="1"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorDecibelMain"
            android:paddingTop="17dp"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:textAlignment="center"
            android:text="Decibel"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="60dp"
            android:padding="5dp"
            android:background="#E3F2FD"
            android:src="@mipmap/ic_decibel_icon"
            android:id="@+id/imageViewDecibel" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card_view_Vision"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:onClick="launchActivity"
        android:layout_weight="1"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorVisionMain"
            android:paddingTop="15dp"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:textAlignment="center"
            android:text="Vision"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="60dp"
            android:background="#E0F7FA"
            android:padding="5dp"
            android:src="@drawable/vision_icon"
            android:id="@+id/imageViewVision" />
    </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="2">
        <android.support.v7.widget.CardView
            android:id="@+id/card_view_Speedometer"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:onClick="launchActivity"
            android:layout_weight="1"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorSpeedometerMain"
                android:paddingTop="15dp"
                android:textColor="#ffffff"
                android:textSize="22dp"
                android:textAlignment="center"
                android:text="Speedometer"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="60dp"
                android:padding="5dp"
                android:background="@color/colorSpeedometer50"
                android:src="@drawable/speedometer_icon"
                android:id="@+id/imageViewSpeedometer" />
        </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card_view_empty"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:onClick="launchActivity"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:visibility="invisible">
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>