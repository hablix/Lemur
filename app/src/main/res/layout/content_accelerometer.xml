<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/content_accelerometer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingTop="60dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.g10.lemur.Accelerometer.Accelerometer"
    tools:showIn="@layout/activity_accelerometer"
    android:background="@color/activity_background">

    <android.support.v7.widget.CardView
        android:id="@+id/cardviewInstrument"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        app:cardCornerRadius="2dp"
        android:visibility="invisible">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/buttonRecordValues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anstoß simulieren"
                android:layout_marginTop="40dp"
                />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="40dp"
                android:text="Button Extra" />

            <TextView
                android:id="@+id/mtextViewInstrumentTitle"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentTop="true"
                android:background="@color/colorAccelerometerMain"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:text="@string/squared_symbolX"
                android:textColor="#ffffff"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9.5"
                android:textSize="60sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="40dp"
                />



        </RelativeLayout>
    </android.support.v7.widget.CardView>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/XDirectionIcon"
                android:layout_width="140dp"
                android:layout_height="160dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="45dp"
                android:src="@drawable/smartphonexaxis"
                android:visibility="invisible"
                 />


            <TextView
                android:id="@+id/Info1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:text="180°"
                android:textSize="20sp"
                 />


            <TextView
                android:id="@+id/Info2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:text="C#³"
                android:textSize="200sp"
                />
        </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cardviewXGraph"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="2dp"
        android:layout_below="@+id/cardviewXData"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <com.jjoe64.graphview.GraphView
            android:id="@+id/XGraph"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>



</LinearLayout>
